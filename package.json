{
  "name": "dear-days",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "biome lint .",
    "format": "biome format --write",
    "check": "biome check .",
    "prepare": "panda codegen && husky",
    "cap:init": "npx cap init 'Dear My Days' 'com.dearmydays.app'",
    "cap:sync": "npx cap sync",
    "cap:sync:prod": "CAPACITOR_ENV=production npx cap sync",
    "cap:ios": "npx cap open ios",
    "cap:android": "npx cap open android",
    "cap:run:ios": "CAPACITOR_PLATFORM=ios npx cap run ios",
    "cap:run:android": "CAPACITOR_PLATFORM=android npx cap run android",
    "dev:ios": "CAPACITOR_PLATFORM=ios npx cap run ios --livereload --external",
    "dev:android": "CAPACITOR_PLATFORM=android npx cap run android --livereload --external"
  },
  "dependencies": {
    "@capacitor/app": "^8.0.0",
    "@capacitor/browser": "^8.0.0",
    "@capacitor/cli": "^8.0.2",
    "@capacitor/core": "^8.0.2",
    "@capacitor/device": "^8.0.0",
    "@capacitor/haptics": "^8.0.0",
    "@capacitor/keyboard": "^8.0.0",
    "@capacitor/network": "^8.0.0",
    "@capacitor/push-notifications": "^8.0.0",
    "@capacitor/share": "^8.0.0",
    "@capacitor/splash-screen": "^8.0.0",
    "@capacitor/status-bar": "^8.0.0",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.90.1",
    "@t3-oss/env-nextjs": "^0.13.10",
    "@tanstack/react-query": "^5.90.19",
    "dayjs": "^1.11.19",
    "next": "16.1.2",
    "next-view-transitions": "^0.3.5",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "resend": "^6.9.1",
    "server-only": "^0.0.1",
    "xml2js": "^0.6.2",
    "zod": "^4.3.6",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@capacitor/android": "^8.0.2",
    "@capacitor/ios": "^8.0.2",
    "@pandacss/dev": "^1.8.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/xml2js": "^0.4.14",
    "babel-plugin-react-compiler": "1.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "packageManager": "pnpm@9.15.4"
}
